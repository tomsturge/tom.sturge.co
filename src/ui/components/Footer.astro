---
import { Icon } from "astro-icon/components";
import { sanityClient } from "sanity:client";

import { getCategories } from "@/ui/queries";

import { ArticleList } from "@/ui/components";

const categories = await sanityClient.fetch(getCategories);
---

<footer class="wrapper">
  <div class="content">
    <div>
      <div class="about-content">
        <h3>About me</h3>
        <p>
          An engineering leader and mentor with 25 years of experience
          supporting aspiring leaders, non-technical founders, and championing
          DEI initiatives in tech. Bringing practical insights from start-up and
          scale-up environments to help build more effective, inclusive
          engineering teams.
        </p>
      </div>
      <ul class="social">
        <li class="social-linkedin">
          <a href="https://linkedin.com/in/tomsturge"
            ><Icon name="mdi:linkedin" width={18} height={18} /></a
          >
        </li>
        <li class="social-youtube">
          <a href="https://youtube.com/tomsturge"
            ><Icon name="mdi:youtube" width={18} height={18} /></a
          >
        </li>
      </ul>
    </div>

    <div>
      <h3>Recent Posts</h3>
      <ArticleList limit={2} compact={true} theme="dark" featured={true} />
    </div>

    <div>
      <h3>Categories</h3>
      <ul class="categories-list">
        {
          categories.map(({ title, slug, articleCount }) => (
            <li class="categories-item">
              <a href={`/category/${slug.current}`}>
                <p>{title}</p>{" "}
                <span class={title.toLowerCase().split(" ").join("-")}>
                  {articleCount}
                </span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="footer">
    <p>
      {new Date().getFullYear()} &copy; CodeForge Software. All rights reserved.
    </p>
  </div>
</footer>

<style lang="scss">
  .wrapper {
    display: grid;
    align-items: space-between;
    flex-direction: column;
    background-color: var(--colorBlack);
    color: #999;
    overflow: hidden;

    p {
      margin: 0;
      font-size: 0.875rem;
    }

    a {
      color: var(--colorWhite);
    }
  }

  h3 {
    margin: 0 0 1rem;
    color: var(--colorWhite);
    font-size: 1.5rem;
  }

  .content {
    max-width: var(--widthMainContainer);
    margin: 0 auto;
    padding: 2rem 0;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .about-content {
    margin-bottom: 2rem;

    p {
      font-size: 1rem;
      line-height: 1.4;
    }
  }

  .social {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(4, 2.5rem);
    gap: 1rem;
    justify-items: start;

    li {
      border-radius: 50%;
      height: 2.5rem;
      width: 2.5rem;
    }

    a {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
    }

    &-linkedin {
      background-color: #0073b1;
    }

    &-youtube {
      background-color: #fe2905;
    }
  }

  .categories-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .categories-item {
    margin-bottom: 0.5rem;
    border-radius: 6px;
    padding: 0.25rem 1rem 0.5rem;

    &:not(:last-child) {
      border-bottom: 1px solid #2d2d2d;
    }

    a {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
    }

    span {
      display: inline-flex;
      width: 1.5rem;
      height: 1.5rem;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      border-radius: 50%;
      background-color: gray;

      &.leadership {
        background-color: var(--colorCategoryLeadership);
      }

      &.culture {
        background-color: var(--colorCategoryCulture);
      }

      &.technology {
        background-color: var(--colorCategoryTechnology);
      }

      &.book-review {
        background-color: var(--colorCategoryBookReview);
      }

      &.sustainability {
        background-color: var(--colorCategorySustainability);
      }
    }
  }

  .footer {
    max-width: var(--widthMainContainer);
    margin: 0 auto;
    padding: 2rem 0;
    border-top: 2px solid #2d2d2d;
    width: 100%;

    @media screen and (max-width: 72rem) {
      max-width: none;
      padding: 5rem 1.5rem;
    }
  }
</style>

---
import Logo from "./Logo.astro";
import { default as ThemeToggle } from "./ThemeToggle.astro";

const { theme } = Astro.props;
---

<div class:list={["masthead", theme]}>
  <div class:list={["container", theme]}>
    <div class="logo">
      <Logo theme={theme} />
    </div>

    <ThemeToggle />
  </div>
</div>

<style lang="scss">
  .masthead {
  }

  .container {
    display: flex;
    padding: 0.5rem 0;
    justify-content: space-between;
    align-items: center;
    max-width: var(--widthMainContainer);
    margin: 0 auto;
    z-index: 20;
    position: relative;
    border-bottom: 1px solid var(--colorThemeText);

    @media screen and (max-width: 79rem) {
      margin: 0 2rem;
    }

    &.dark {
      border-bottom-color: var(--colorWhite);
    }
  }

  .masthead-wrapper {
    display: grid;

    nav {
      margin: auto;

      ul {
        list-style: none;
        margin: 0;
        padding: 1rem 0;
        display: flex;
        flex-direction: row;
        font-weight: var(--fontWeightSemiBold);
        font-family: var(--fontFamilyHeading);
        font-size: 1.25rem;
        line-height: 1.4;
        letter-spacing: 0px;
      }
      a {
        padding: 0.5rem 2rem;
        color: var(--colorWhite);
      }
    }

    &.black nav ul a {
      color: var(--colorBlack);
    }
  }
</style>

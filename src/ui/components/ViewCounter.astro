---
// components/ViewCounter.astro
export interface Props {
  views: number;
}

const { views = 0 } = Astro.props;
---

<div class="view-counter">
  <span id="view-count" data-initial={views}>{views}</span>
  <span>views</span>
</div>

<style>
  .view-counter {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    color: var(--colorThemeText);
    font-family: var(--fontFamilyHeading);
    margin: 0.5rem 0;
  }
</style>

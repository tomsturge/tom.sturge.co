---
import { ClientRouter } from "astro:transitions";

import "@/ui/styles/variables.scss";
import "@/ui/styles/global.scss";

import { Footer, Masthead } from "@/ui/components";

const { title, type, theme } = Astro.props;

const pageTitle = `${title ? `${title} Â» ` : ""}Tom Sturge`;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{pageTitle}</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Tom Sturge" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; img-src 'self' https://cdn.sanity.io/; child-src 'none'; style-src 'unsafe-inline' 'self'; worker-src 'self'; style-src-elem 'unsafe-inline' 'self'; script-src-elem 'self' 'unsafe-inline'; font-src 'self' data:"
    />

    <slot name="seo" />

    <ClientRouter />

    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia?.(
          "(prefers-color-scheme: dark)",
        ).matches;
        const isDark = stored === "dark" || (!stored && prefersDark);

        if (isDark) {
          document.documentElement.classList.add("dark");
          document.documentElement.style.setProperty(
            "--colorThemeMainBackground",
            "var(--colorBlack)",
          );
          document.documentElement.style.setProperty(
            "--colorThemeAccentBackground",
            "var(--colorDarkGrey)",
          );
          document.documentElement.style.setProperty(
            "--colorThemeText",
            "var(--colorWhite)",
          );
        } else {
          document.documentElement.style.setProperty(
            "--colorThemeMainBackground",
            "var(--colorWhite)",
          );
          document.documentElement.style.setProperty(
            "--colorThemeAccentBackground",
            "var(--colorLightGrey)",
          );
          document.documentElement.style.setProperty(
            "--colorThemeText",
            "var(--colorBlack)",
          );
        }
      })();
    </script>

    <script>
      import { aosInit } from "@/ui/scripts/aos";

      aosInit();
    </script>
  </head>

  <body>
    <Masthead type={type} theme={theme} />

    <slot />

    <Footer />
  </body>
</html>
